<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_my_profile"
        tools:context=".MyProfileActivity">
    <ImageView
            android:layout_width="223dp"
            android:layout_height="193dp"
            app:srcCompat="@drawable/fadjo_crepin"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            />

    <TextView
            android:text="Crépin Hugues FADJO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/aclonica"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="#D6B2B2">

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:text="Track :"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.3"/>
        <TextView
                android:text="Android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.6"/>


    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:text="Country :"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.3"/>
        <TextView
                android:text="Benin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.6"/>


    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:text="Email :"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.3"/>
        <TextView
                android:text="fadcrepin@gmail.com"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.6"/>


    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:text="Phone Number :"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.3"/>
        <TextView
                android:text="22996119149"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.6"/>


    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:text="Slack Username :"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.3"/>
        <TextView
                android:text="@Crépin Hugues FADJO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/aclonica"
                android:layout_weight="0.6"/>


    </LinearLayout>


</LinearLayout>